@model ForumSystem.Web.ViewModels.Posts.PostViewModel
@{
    this.ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>



<div class="container-fluid mt-100">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100 align-items-center">
                        <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1574583246/AAA/2.jpg" class="d-block ui-w-40 rounded-circle" alt="">
                        <div class="media-body ml-3">
                            <a href="javascript:void(0)" data-abc="true">@Model.UserUserName</a>
                            <div class="text-muted small">@Model.CreatedOn</div>
                        </div>
                        <div class="text-muted small ml-3">
                            <div>
                                <a href="#" onclick="upVote(@Model.Id)">
                                    <i class="fa fa-thumbs-up"></i>
                                </a>
                            </div>
                            <div>@Model.VotesCount</div>
                            <div>
                                <a href="#" onclick="downVote(@Model.Id)">
                                    <i class="fa fa-thumbs-down"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.SanitizedContent)
                </div>
                <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                    <div class="px-4 pt-3">
                        <i class="fa fa-heart text-danger"></i>&nbsp; <span class="align-middle">Not Functional</span>

                        <span class="text-muted d-inline-flex align-items-center align-middle ml-4">
                            <i class="fa fa-eye text-muted fsize-3"></i>&nbsp; <span class="align-middle">Not Functional</span>
                        </span>
                    </div>
                    <div class="px-4 pt-3"> <button type="button" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp; Reply</button> </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        function upVote(postId) {
            var json = { postId: postId, isUpVote: true }
            $.post("/api/votes", json);
            console.log(json)
        }

        function downVote(postId) {
            var json = { postId: postId, isUpVote: false }
            $.post("/api/votes", json);
            console.log(json)
        }
    </script>
}